<h1>註冊</h1>
<%= form_with(model: @user, url: users_path, local: true) do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>

  <%= form.label :password %>
  <%= form.password_field :password %>

  <%= form.submit "註冊" %>
<% end %>

<% if flash[:error] %>
  <div class="alert alert-success">
    <%= flash[:error] %>
  </div>
<% end %>
